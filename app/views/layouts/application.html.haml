!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Ifeelsad'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Ifeelsad'}"}
    = stylesheet_link_tag 'application', media: 'all'
    %script{src: "http://www.amcharts.com/lib/3/ammap.js", type: "text/javascript"}
    %script{src: "http://www.amcharts.com/lib/3/maps/js/worldLow.js", type: "text/javascript"}
    %script{src: "http://js.pusher.com/2.2/pusher.min.js", type: "text/javascript"}
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    %main{:role => "main"}
      = render 'layouts/messages'
      = yield

